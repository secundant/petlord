{
  "private": true,
  "name": "my-project",
  "version": "0.0.1",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "jest-circus": "^27.2.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "lint": "yarn check:eslint --fix",
    "test": "jest --maxWorkers=1",
    "cleanup": "lerna exec --stream --no-bail -- yarn cleanup",
    "check": "yarn check:typescript && yarn check:eslint && yarn check:doctor",
    "check:eslint": "eslint apps/**/*.{ts,tsx}",
    "check:doctor": "yarn dlx @yarnpkg/doctor",
    "check:typescript": "yarn workspaces foreach -ptA run check:typescript",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('You must use Yarn to install, not NPM')\"",
    "postinstall": "husky install"
  },
  "engines": {
    "node": ">14",
    "yarn": ">3"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*",
      "shared/*",
      "tools/*"
    ]
  },
  "packageManager": "yarn@3.0.2"
}
